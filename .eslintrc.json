{
  "env": {
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "unix"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-case-declarations": "off"
  }
}
